{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["jest"],
    "typeRoots": [
      "./@types",
      "node_modules/@types",
      "../../node_modules/@types"
    ],
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true
  }
}
