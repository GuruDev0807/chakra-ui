{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "jsx": "react",
    "moduleResolution": "node",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "noImplicitAny": false,
    "strict": false
  },
  "exclude": ["../node_modules"],
  "include": ["../packages", "../node_modules/@chakra-ui"]
}
