{
  "name": "@chakra-ui/textarea",
  "version": "0.0.1",
  "description": "description",
  "keywords": [
    "theme",
    "theming",
    "ui mode",
    "ui",
    "textarea",
    "form",
    "form-control",
    "chakra"
  ],
  "author": "Segun Adebayo <sage@adebayosegun.com>",
  "homepage": "https://github.com/chakra-ui/chakra-ui#readme",
  "license": "MIT",
  "main": "dist/cjs",
  "module": "dist/esm",
  "types": "dist/types",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chakra-ui/chakra-ui.git"
  },
  "bugs": {
    "url": "https://github.com/chakra-ui/chakra-ui/issues"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "start": "nodemon --exec yarn build --watch src",
    "build": "concurrently yarn:build:*",
    "test": "jest --env=jsdom --passWithNoTests",
    "lint": "concurrently yarn:lint:*",
    "version": "yarn build",
    "build:esm": "tsc --module esnext --outDir dist/esm --declaration false",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs --declaration false",
    "build:types": "tsc --emitDeclarationOnly --declaration true --declarationDir dist/types",
    "test:cov": "yarn test --coverage",
    "lint:src": "eslint src --ext .ts,.tsx --config ../../.eslintrc",
    "lint:types": "tsc --noEmit"
  },
  "dependencies": {
    "tslib": "1.11.1",
    "@chakra-ui/form-control": "0.0.1",
    "@chakra-ui/utils": "0.0.1"
  },
  "peerDependencies": {
    "@chakra-ui/system": "0.0.1",
    "react": "16.x",
    "react-dom": "16.x"
  }
}
