{
  "name": "chakra-ui",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "commit": "git-cz",
    "clean": "lerna clean --yes",
    "bootstrap": "yarn clean && lerna bootstrap --use-workspaces",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -c .storybook",
    "docs": "yarn workspace @chakra-ui/docs dev",
    "docs:now": "cd packages/chakra-ui-docs && now",
    "build": "lerna exec --parallel yarn build --ignore @chakra-ui/docs",
    "test": "yarn workspace @chakra-ui/core test",
    "link:all": "npx lerna link",
    "core": "yarn workspace @chakra-ui/core",
    "icon": "yarn workspace @chakra-ui/icons",
    "hooks": "yarn workspace @chakra-ui/hooks",
    "utils": "yarn workspace @chakra-ui/utils",
    "layout": "yarn workspace @chakra-ui/layout",
    "system": "yarn workspace @chakra-ui/system",
    "preset": "yarn workspace @chakra-ui/preset-base",
    "color": "yarn workspace @chakra-ui/color",
    "release": "lerna publish"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn workspace @chakra-ui/core lint --fix "
    }
  },
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "@emotion/core": "10.0.10",
    "@emotion/styled": "10.0.11",
    "@storybook/addon-actions": "^5.2.8",
    "@storybook/addon-docs": "^5.2.8",
    "@storybook/addon-knobs": "5.2.8",
    "@storybook/addon-links": "^5.2.8",
    "@storybook/addons": "^5.2.8",
    "@storybook/react": "^5.2.8",
    "@types/jest": "24.0.19",
    "@typescript-eslint/eslint-plugin": "2.13.0",
    "@typescript-eslint/parser": "2.13.0",
    "all-contributors-cli": "6.8.2",
    "awesome-typescript-loader": "5.2.1",
    "babel-eslint": "10.0.3",
    "babel-loader": "8.0.6",
    "commitizen": "4.0.3",
    "cz-conventional-changelog": "3.0.2",
    "emotion-theming": "10.0.10",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-react-hooks": "2.3.0",
    "lerna": "^3.15.0",
    "lint-staged": "9.2.1",
    "prettier": "1.19.1",
    "react": "16.12.0",
    "react-docgen-typescript-loader": "3.3.0",
    "react-dom": "16.12.0",
    "react-lorem-component": "^0.13.0",
    "react-transition-group": "4.3.0"
  },
  "bundlesize": [
    {
      "path": "./packages/system/dist/*.js",
      "maxSize": "10 kB"
    }
  ]
}
